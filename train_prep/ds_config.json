{
    "train_batch_size": 256,
    "train_micro_batch_size_per_gpu": 16,
    "gradient_accumulation_steps": 8,
    "optimizer": {
        "type": "Adam",
        "params": {
          "lr": 6e-4,
          "betas": [
            0.9,
            0.95
          ],
          "eps": 1e-8,
          "weight_decay": 0.1,
          "adam_w_mode": true
        }
      },
    "scheduler": {
        "type": "WarmupCosineLR",
        "params": {
          "total_num_steps": 1000000,
          "warmup_num_steps": 10000,
          "warmup_type": "linear",
          "cos_min_ratio": 0.1
        }
      },
    "amp": {
        "enabled": true
    },
    "gradient_clipping": 1.0,
    "steps_per_print": 10,
    "wall_clock_breakdown": true,
    "flops_profiler": {
        "enabled": true,
        "profile_step": 10,
        "output_file": "flops_profiler.txt"
    },
    "wandb": {
        "enabled": true,
        "team": "devinterp",
        "project": "gw-deepspeed-test"
    }
}