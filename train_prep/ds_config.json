{
    "train_batch_size": 256,
    "train_micro_batch_size_per_gpu": "auto",
    "gradient_accumulation_steps": "auto",
    "optimizer": {
        "type": "Adam",
        "params": {
          "lr": 6e-4,
          "betas": [
            0.9,
            0.95
          ],
          "eps": 1e-8,
          "weight_decay": 0.1,
          "adam_w_mode": true
        }
      },
    "scheduler": {
        "type": "WarmupCosineLR",
        "params": {
          "total_num_steps": 1000,
          "warmup_num_steps": 10,
          "warmup_type": "linear",
          "cos_min_ratio": 0.1
        }
      },
    "bf16": {
        "enabled": true
    },
    "gradient_clipping": 1.0,
    "zero_optimization": {
        "stage": 0,
        "allgather_partitions": true,
        "allgather_bucket_size": 5e8,
        "reduce_bucket_size": 5e8,
        "overlap_comm": false,
        "load_from_fp32_weights": true,
        "contiguous_gradients": true
    },
    "steps_per_print": 10,
    "wandb": {
        "enabled": true,
        "team": "devinterp",
        "project": "gw-deepspeed-test"
    }
}